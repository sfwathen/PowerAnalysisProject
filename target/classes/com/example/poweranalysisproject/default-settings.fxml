<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.poweranalysisproject.DefaultSettingsController">

    <ToolBar prefHeight="40.0" prefWidth="600.0">
        <items>
            <Button id="home-btn" mnemonicParsing="false" onAction="#goToHomePage" text="Home" />
            <Button id="settings-btn" mnemonicParsing="false" onAction="#goToSettings" text="Default Settings" />
            <Button id="reports-btn" mnemonicParsing="false" onAction="#goToReportViewer" text="View Reports" />
            <Button id="log-out-btn" mnemonicParsing="false" onAction="#goToLoginPage" text="Log Out" />
        </items>
    </ToolBar>

    <VBox alignment="CENTER" spacing="20.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
        <children>
            <Pane prefHeight="321.0" prefWidth="503.0">
                <children>
                    <Button layoutX="355.0" layoutY="245.0" mnemonicParsing="false" onAction="#saveThresholds" prefWidth="100.0" text="Save Settings" />
                    <TextField fx:id="memoryThreshold" layoutX="305.0" layoutY="88.0" prefHeight="25.0" prefWidth="200.0" promptText="Enter Memory Usage Treshold" />
                    <TextField fx:id="cpuThreshold" layoutX="305.0" layoutY="136.0" prefHeight="25.0" prefWidth="200.0" promptText="Enter CPU Usage Treshold" />
                    <TextField fx:id="diskThreshold" layoutX="305.0" layoutY="184.0" prefHeight="25.0" prefWidth="200.0" promptText="Enter Disk Usage Treshold" />
                    <Label layoutX="105.0" layoutY="22.0" text="Set Default Analysis Settings">
                        <font>
                            <Font size="28.0" />
                        </font>
                    </Label>
               <Button layoutX="53.0" layoutY="88.0" mnemonicParsing="false" onAction="#enableAnalysis" prefHeight="25.0" prefWidth="200.0" text="Enable Power Analysis" />
               <Button layoutX="53.0" layoutY="136.0" mnemonicParsing="false" onAction="#disableAnalysis" prefHeight="25.0" prefWidth="200.0" text="Disable Power Analysis" />
               <Button layoutX="53.0" layoutY="184.0" mnemonicParsing="false" prefHeight="25.0" prefWidth="200.0" text="Set Default User Pool" />
               <Button layoutX="103.0" layoutY="245.0" mnemonicParsing="false" onAction="#goToHomePage" prefWidth="100.0" text="Back to Home" />
                </children>
            </Pane>
        </children>
    </VBox>
    <stylesheets>
        <URL value="@navBar.css" />
    </stylesheets>
</VBox>
