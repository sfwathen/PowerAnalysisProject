<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.ToolBar?>
<VBox alignment="TOP_CENTER" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.poweranalysisproject.PowerAnalysisPortalController" prefHeight="400" prefWidth="600">
   <ToolBar prefHeight="40.0" prefWidth="600.0">
      <items>
         <Button mnemonicParsing="false" text="Home" />
         <Button mnemonicParsing="false" text="Default Settings" />
         <Button mnemonicParsing="false" text="View Reports" />
         <Button mnemonicParsing="false" text="Log Out" />
      </items>
   </ToolBar>

<!--   Page Contents-->
   <VBox alignment="CENTER" prefHeight="250.0" maxHeight="250.0" prefWidth="300.0" maxWidth="300.0" style="-fx-border-color: black; -fx-border-width: 1;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
      <VBox.margin>
         <Insets top="50.0" />
      </VBox.margin>
      <Label alignment="CENTER" contentDisplay="TEXT_ONLY" text="Log In" textAlignment="CENTER">
         <font>
            <Font size="24.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" top="10.0" />
         </VBox.margin>
      </Label>
      <TextField alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="26.0" prefWidth="250.0" promptText="Username">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </TextField>
      <TextField alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="26.0" prefWidth="250.0" promptText="Password">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </TextField>
      <Label alignment="CENTER" contentDisplay="CENTER" style="-fx-text-fill: blue;" text="Forgot Password?" textAlignment="CENTER" underline="true">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>
      <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="126.0" text="Log In">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Button>
   </VBox>
</VBox>


