<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import java.net.URL?>
<VBox prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.poweranalysisproject.AnalysisSettingsController">

    <ToolBar prefHeight="40.0" prefWidth="600.0">
        <items>
            <Button id="home-btn" mnemonicParsing="false" onAction="#goHome" text="Home" />
            <Button id="settings-btn" mnemonicParsing="false" onAction="#goToSettings" text="Default Settings" />
            <Button id="reports-btn" mnemonicParsing="false" onAction="#viewReports" text="View Reports" />
            <Button id="log-out-btn" mnemonicParsing="false" text="Log Out" />
        </items>
    </ToolBar>

    <VBox alignment="CENTER" spacing="20.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>
      <children>
         <Pane prefHeight="321.0" prefWidth="503.0">
            <children>
               <Button layoutX="227.0" layoutY="245.0" mnemonicParsing="false" onAction="#clickButtonScheduleAnalysis" text="Schedule Analysis" />
               <TextField fx:id="MemoryTreshold" layoutX="63.0" layoutY="90.0" prefHeight="25.0" prefWidth="200.0" promptText="Enter Memory UsageTreshold" />
               <TextField fx:id="CPUTreshold" layoutX="63.0" layoutY="135.0" prefHeight="25.0" prefWidth="200.0" promptText="Enter CPU Usage Treshold" />
               <TextField fx:id="DiskTreshold" layoutX="63.0" layoutY="180.0" prefHeight="25.0" prefWidth="200.0" promptText="Enter Disk Usage Treshold" />
               <Label layoutX="146.0" layoutY="20.0" text="Set Analysis Settings">
                  <font>
                     <Font size="28.0" />
                  </font>
               </Label>
               <DatePicker fx:id="textFieldStartDate" layoutX="302.0" layoutY="90.0" prefHeight="25.0" prefWidth="165.0" promptText="Enter Start Date M/D/Y" />
               <DatePicker fx:id="textFieldEndDate" layoutX="302.0" layoutY="179.0" prefHeight="25.0" prefWidth="165.0" promptText="Enter End Date M/D/Y" />
               <CheckBox fx:id="CurrTimeCheckBox" layoutX="302.0" layoutY="122.0" mnemonicParsing="false" text="Use Current Time" />
            </children>
         </Pane>
      </children>
    </VBox>
    <stylesheets>
        <URL value="@navBar.css" />
    </stylesheets>
</VBox>
