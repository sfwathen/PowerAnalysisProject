<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.poweranalysisproject.ProfileController">
   <ToolBar prefHeight="40.0" prefWidth="600.0">
      <items>
         <Button id="home-btn" mnemonicParsing="false" onAction="#goToHomePage" text="Home" />
         <Button id="settings-btn" mnemonicParsing="false" onAction="#goToSettings" text="Default Settings" />
         <Button id="reports-btn" mnemonicParsing="false" onAction="#viewReports" text="View Reports" />
         <Button id="log-out-btn" mnemonicParsing="false" onAction="#goToLoginPage" text="Log Out" />
      </items>
   </ToolBar>

   <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="360.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
      <children>
         <VBox alignment="TOP_CENTER" prefHeight="380.0" prefWidth="393.0" style="-fx-border-color: black;">
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin>
            <children>
               <ImageView fitHeight="111.0" fitWidth="140.0" pickOnBounds="true" preserveRatio="true">
                  <VBox.margin>
                     <Insets top="40.0" />
                  </VBox.margin>
                  <image>
                     <Image url="@template-profile.jpeg" />
                  </image>
               </ImageView>
               <TextField alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="225.0" promptText="First Name, Last Name">
                  <VBox.margin>
                     <Insets top="30.0" />
                  </VBox.margin>
               </TextField>
               <TextField alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="225.0" promptText="Position: Supervisor">
                  <VBox.margin>
                     <Insets top="20.0" />
                  </VBox.margin>
               </TextField>
               <TextField alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="225.0" promptText="Company: Cal Poly">
                  <VBox.margin>
                     <Insets top="20.0" />
                  </VBox.margin>
               </TextField>
            </children>
         </VBox>
         <ComboBox editable="true" prefHeight="26.0" prefWidth="170.0" promptText="Select Report">
            <HBox.margin>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </HBox.margin>
         </ComboBox>
      </children>
   </HBox>
   <stylesheets>
      <URL value="@navBar.css" />
   </stylesheets>
</VBox>
